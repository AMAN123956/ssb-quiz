<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Free SSB Guide</title>
    <link rel="stylesheet" href="../../css/ssb-admin.css">
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i">
    <link rel="stylesheet" href="assets/fonts/fontawesome-all.min.css">
    <link rel="stylesheet" href="assets/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="assets/fonts/fontawesome5-overrides.min.css">
</head>

<body id="page-top">
    <div id="wrapper">
        <%- include('./admin-navbar'); -%>
        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
                <%- include('./admin-sidebar'); -%>
                <div class="container-fluid">
                    <!-- <div class="d-sm-flex justify-content-between align-items-center mb-4">
                        <h3 class="text-dark mb-0">PPDT Dashboard</h3>

                    </div> -->
                    <h1>ADMIN PANEL</h1>
                    <!--Managing Admin Section -->
                    <% 
                    let card="";
                    let desc="";
                    for(let i=0; i<response.length; i++){
                       card+=`<div class="card">
                             <h2 class="card-heading">PPDT</h2>
                             <button class="btn btn-primary review-btn" >Review</button>

                       </div>`
                       desc+=`<div class="form-box">
                        <form action="/ppdt/changestatus" id="returnPPDT" method="POST">
                            <input type="text" name="email" value='${response[i].email}'>
                            <input type="text" name="username" value='${response[i].username}'>
                            <input type="text" name="picture" value='${response[i].picture}'
                                style="display:none;">
                            <input type="text" name="status" value="True" style="display:none;">
                            <!-- Value to be filled after checking whether new score is greater or less than previous best-->
                            <input type="number" placeholder="Enter Score" class="highScore" name="highscore" required="true" value="">
                            <input type="number" name="count" value='${response[i].count}'
                                style="display:none;">
                            <input id="image-number" type="number" name="imagenumber" value='${response[i].imagenumber}'
                                style="display:none;">
                            <textarea id="user-answer" name="answer" class="shadow"
                                style="border:2px solid #5e81cf;padding:10px;display:block;width:90%;margin:50px auto;"
                                value='' rows=10 cols=100>
                               ${response[i].answer}
                            </textarea>
                           
                            <button type="submit" id="submit"
                                class="btn btn-lg btn-danger mr-5">Submit</button>
                        </form>
                       
                       </div>`
                    }
                    
                    
                    
                    %>
                    <div class="main" style="margin-top:200px;">
                        <%- card %>
                    </div>
                    <div class="main" style="margin-top:100px;display:none;">
                        <%- desc %>
                    </div>
                  
                   
                </div>
            </div>
        
            <div id="userEmail" style="display:none;"><%= user.email %></div>
            <footer class="bg-white sticky-footer">
                <div class="container my-auto">
                    <div class="text-center my-auto copyright"><span>Copyright Â© FSB 2021</span></div>
                </div>
            </footer>
        </div><a class="border rounded d-inline scroll-to-top" href="#page-top"><i class="fas fa-angle-up"></i></a>
    </div>
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="assets/js/chart.min.js"></script>
    <script src="assets/js/bs-init.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.js"></script>
    <script src="assets/js/theme.js"></script>
    <script src="js/landing.js"></script>
    <script>
        const reviewBtn = document.querySelectorAll(".review-btn");
        const formBox = document.querySelectorAll(".form-box");
        const mainBox = document.querySelectorAll(".main")
        console.log(reviewBtn)
        for(let i=0;i<formBox.length;i++){
            formBox[i].style.display="none";
        }


        for(let i=0;i<reviewBtn.length;i++){
        reviewBtn[i].addEventListener("click",(e)=>{
            mainBox[0].style.display="none";
            mainBox[1].style.display="block";
            formBox[i].style.display="block";
        })
    }
    </script>
</body>

</html>